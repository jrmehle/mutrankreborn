#player-card.container-fluid
  .card
    .container-fluid
      .row
        .col-2.col-sm-4
          = render partial: 'mut_card', locals: { player_card: @player_card }

          .stat-group.ranks
            %h3 Ranks
            %ul.list-group.list-group-flush
              - Object.const_get("#{ current_game_version }::Position").styles(position_name_or_abbreviation: @player_card.position).each do |style|
                = stat_list_item style_title(style), (1..20).to_a.sample, player_cards_path(position: @player_card.position, style: style)

          .stat-group.chemistries
            %h3 Chemistries
            %ul.list-group.list-group-flush
              - @player_card.player_card_chemistries.includes(:chemistry).where(chemistries: {display_position: 1}).each do |player_card_chemistry|
                %li.list-group-item.d-flex.justify-content-between.align-items-center
                  .small= player_card_chemistry.chemistry_name
                  .small= display_chemistry_boosts player_card_chemistry.chemistry, player_card_chemistry.tier
        .col-10.col-sm-8
          .container
            .row
              .col-4
                .stat-group.generic-stats
                  %h3 General
                  %ul.list-group.list-group-flush
                    - Object.const_get("#{ current_game_version }::Position").general_stats.each do |stat|
                      = stat_list_item stat.to_s.titleize, @player_card.attributes[stat.to_s]

                .stat-group.traits
                  %h3 Traits
                  %ul.list-group.list-group-flush
                    - Object.const_get("#{ current_game_version }::Position").traits[@player_card.position.to_sym].each do |trait|
                      = stat_list_item trait, @player_card.attributes[trait.to_s]

              .col-4
                .stat-group.offensive-stats
                  %h3 Offense
                  %ul.list-group.list-group-flush
                    - Object.const_get("#{ current_game_version }::Position").offensive_stats.each do |stat|
                      = stat_list_item stat.to_s.titleize, @player_card.attributes[stat.to_s]

              .col-4
                .stat-group.defensive-stats
                  %h3 Defense
                  %ul.list-group.list-group-flush
                    - Object.const_get("#{ current_game_version }::Position").defensive_stats.each do |stat|
                      = stat_list_item stat.to_s.titleize, @player_card.attributes[stat.to_s]

                .stat-group.special-teams-stats
                  %h3 Special Teams
                  %ul.list-group.list-group-flush
                    - Object.const_get("#{ current_game_version }::Position").special_teams_stats.each do |stat|
                      = stat_list_item stat.to_s.titleize, @player_card.attributes[stat.to_s]
