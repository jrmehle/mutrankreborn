.col-md2{ class: "position-#{position}" }
  .card
    %h3{ title: Object.const_get("#{ Mutreborn::Application::DEFAULT_GAME_VERSION.camelize }::Position").name_from_abbreviation(abbreviation: position) }
      = position.upcase
    %ul.list-unstyled.mutposition{ id: position }
      - Object.const_get("#{ Mutreborn::Application::DEFAULT_GAME_VERSION.camelize }::Position").styles(position_name_or_abbreviation: position).each do |style|
        %li= link_to style_title(style), player_cards_path(position: position, style: style)
